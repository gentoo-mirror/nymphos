---
 src/svlogd.c | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

--- a/src/svlogd.c
+++ b/src/svlogd.c
@@ -234,7 +234,7 @@
         if (unlink(f->d_name) == -1)
           warn2("unable to unlink processor leftover", f->d_name);
       }
-      else {
+      else if (f->d_name[26] != 'u') {
         ++n;
         if (str_diff(f->d_name, oldest) < 0) byte_copy(oldest, 27, f->d_name);
       }
